<body>
  <header>DreamLove AI ðŸ’—</header>

  <div class="container">
    <div class="persona-select">
      <select id="persona">
        <option value="cute">Cute & Caring</option>
        <option value="bold">Bold & Flirty</option>
        <option value="emotional">Emotional Lover</option>
        <option value="funny">Funny & Playful</option>
      </select>
    </div>

    <div class="chat-box" id="chat"></div>

    <div class="input-area">
      <input type="text" id="msg" placeholder="Type your message..." />
      <button onclick="sendMsg()">Send</button>
    </div>
  </div>

  <script>
    function aiReply(text, persona) {
      const replies = {
        cute: `Aww baby, ${text}? You're so sweet â™¥` ,
        bold: `Hmm naughty boy... so you said: ${text} ðŸ˜˜`,
        emotional: `Your words really touch me... ${text} ðŸ’–`,
        funny: `Haha! You said '${text}'? You're crazy ðŸ˜‚`
      };
      return replies[persona] || replies.cute;
    }

    function sendMsg() {
      let msg = document.getElementById("msg").value;
      if (!msg.trim()) return;

      let chat = document.getElementById("chat");
      let persona = document.getElementById("persona").value;

      chat.innerHTML += `<div class='msg user'>${msg}</div>`;
      document.getElementById("msg").value = "";

      setTimeout(() => {
        let aiText = aiReply(msg, persona);
        chat.innerHTML += `<div class='msg ai'>${aiText}</div>`;
        chat.scrollTop = chat.scrollHeight;
      }, 500);
    }
  </script>
